{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "src/__tests__",
    "src/contexts/**",
    "src/services/app-mapper.ts",
    "src/services/app-orchestrator.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
